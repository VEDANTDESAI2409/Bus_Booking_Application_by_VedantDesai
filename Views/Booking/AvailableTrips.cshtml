@model IEnumerable<BusBookingWebApp.Models.Schedule>

@{
    ViewData["Title"] = "Available Trips";
    string fromQuery = Context?.Request?.Query["from"].ToString() ?? "";
    string toQuery = Context?.Request?.Query["to"].ToString() ?? "";
}

<h2>@ViewData["Title"]</h2>

<form method="get" class="mb-3 d-flex gap-2">
    <input name="from" placeholder="From" value="@fromQuery" class="form-control" />
    <input name="to" placeholder="To" value="@toQuery" class="form-control" />
    <button type="submit" class="btn btn-primary">Search</button>
</form>

@if (!Model.Any())
{
    <p>No trips found.</p>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Bus</th>
                <th>Route</th>
                <th>Departure</th>
                <th>Fare</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@(s.Bus?.Name ?? "No Bus")</td>
                    <td>@(s.Bus?.Route?.From ?? "?") â†’ @(s.Bus?.Route?.To ?? "?")</td>
                    <td>@s.DepartureTime.ToString("g")</td>
                    <td>@s.Fare.ToString("C")</td>
                    <td>
                        <a class="btn btn-success" 
                           asp-controller="Booking" 
                           asp-action="Book" 
                           asp-route-scheduleId="@s.Id">
                            Book Now
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
