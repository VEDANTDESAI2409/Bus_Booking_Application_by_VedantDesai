@model IEnumerable<BusBookingWebApp.Models.Booking>

<h2>My Bookings</h2>

@if (!Model.Any())
{
    <p>No bookings found.</p>
}
else
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Bus Name</th>
                <th>From</th>
                <th>To</th>
                <th>Seats</th>
                <th>Fare</th>
                <th>Booking Time</th>
                <th>Cancel Booking</th>
                </tr>
        </thead>
        <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.Schedule?.Bus?.Name</td>
                <td>@booking.Schedule?.Bus?.Route?.From</td>
                <td>@booking.Schedule?.Bus?.Route?.To</td>
                <td>@booking.SeatsBooked (@booking.SelectedSeatNumbers)</td>
                <td>@booking.Schedule?.Fare</td>
                <td>@booking.BookingTime.ToString("g")</td>
                <td>
                    <form asp-action="CancelBooking" asp-route-id="@booking.Id" method="post">
                        <button type="submit" class="btn btn-danger btn-sm">Cancel</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
