@model IEnumerable<BusBookingWebApp.Models.Schedule>

@{
    ViewData["Title"] = "Available Trips";
    string fromQuery = Context?.Request?.Query["from"].ToString() ?? "";
    string toQuery = Context?.Request?.Query["to"].ToString() ?? "";
}

<h2>@ViewData["Title"]</h2>

<form method="get" class="mb-3 d-flex gap-2 align-items-center">
    <input name="from" list="fromList" placeholder="From" value="@fromQuery" class="form-control" />
    <datalist id="fromList">
        @foreach (var f in (IEnumerable<string>)ViewBag.FromList)
        {
            <option value="@f"></option>
        }
    </datalist>

    <input name="to" list="toList" placeholder="To" value="@toQuery" class="form-control" />
    <datalist id="toList">
        @foreach (var t in (IEnumerable<string>)ViewBag.ToList)
        {
            <option value="@t"></option>
        }
    </datalist>

    <button type="submit" class="btn btn-primary">Search</button>

    <a href="?showAll=true" class="btn btn-secondary">Show All</a>
</form>

@if (!Model.Any())
{
    <div class="alert alert-warning">No trips found.</div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Bus</th>
                <th>Route</th>
                <th>Departure</th>
                <th>Fare</th>
                <th>Available Seats</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
                var seatsBooked = s.Bookings?.Sum(b => b.SeatsBooked) ?? 0;
                var availableSeats = (s.Bus?.TotalSeats ?? 0) - seatsBooked;

                <tr>
                    <td>@(s.Bus?.Name ?? "No Bus")</td>
                    <td>@(s.Bus?.Route?.From ?? "?") â†’ @(s.Bus?.Route?.To ?? "?")</td>
                    <td>@s.DepartureTime.ToString("g")</td>
                    <td>@s.Fare.ToString("C")</td>
                    <td>@availableSeats</td>
                    <td>
                        <a class="btn btn-success"
                           asp-controller="Booking"
                           asp-action="Book"
                           asp-route-scheduleId="@s.Id">
                            Book Now
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
